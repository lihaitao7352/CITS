SELECT
    s.sid,
    s.serial#,
    s.username,
    s.machine,
    s.program,
    s.module,
    s.osuser,
    s.terminal,
    s.process,
    s.status,
    s.schemaname,
    s.logon_time,
    s.host,
    ci.client_address
FROM
    v$session s
JOIN
    v$session_connect_info ci ON s.sid = ci.sid
WHERE
    s.audsid = sys_context('USERENV', 'SESSIONID');
